{% extends 'base.html.twig' %}

{% block title %}Liste tranches salaires{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des tranches de salaires</h1>

    {{ include('flash_messages.html.twig') }}

    <a href="{{ path('back_salary_new') }}" class="btn btn-info mb-2">Ajouter une tranche de salaire</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for salary in salaries %}
            <tr>
                <td>{{ salary.id }}</td>
                <td>{{ salary.name }}</td>
                <td>{{ salary.createdAt ? salary.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ salary.updatedAt ? salary.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('back_salary_edit', {'id': salary.id}) }}" class="btn btn-success btn-sm">Modifier</a>
                    <a href="{{ path('back_salary_delete', {'id': salary.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
