{% extends 'base.html.twig' %}

{% block title %}Secteur activité{% endblock %}

{% block body %}
<div class="container">
    <h1>Secteur d'activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sector.id }}</td>
            </tr>
            <tr>
                <th>SectorName</th>
                <td>{{ sector.sectorName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ sector.createdAt ? sector.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ sector.updatedAt ? sector.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_sector_index') }}" class="btn btn-primary btn-sm">Retour à la liste</a>

    <a href="{{ path('back_sector_edit', {'id': sector.id}) }}" class="btn btn-success btn-sm float-end">Modifier</a>

    {{ include('sector/_delete_form.html.twig') }}
</div>
{% endblock %}
