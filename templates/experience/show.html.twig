{% extends 'base.html.twig' %}

{% block title %}Niveau expérience{% endblock %}

{% block body %}
<div class="container">
    <h1>Niveau d'expérience</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>YearsNumber</th>
                <td>{{ experience.yearsNumber }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ experience.createdAt ? experience.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ experience.updatedAt ? experience.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_experience_index') }}" class="btn btn-primary btn-sm">Retour à la liste</a>

    <a href="{{ path('back_experience_edit', {'id': experience.id}) }}" class="btn btn-success btn-sm float-end">Modifier</a>

    {{ include('experience/_delete_form.html.twig') }}
</div>
{% endblock %}
